---
layout: null
---
{
  "companies": [
    {% assign en_companies = site.companies | where: 'lang', 'en' | sort: 'date' | reverse %}
    {% for company in en_companies %}
    {
      "title": "{{ company.target_name | escape }}",
      "url": "{{ company.url | absolute_url }}",
      "summary": "{{ company.summary | escape }}",
      "date": "{{ company.date | date: '%Y-%m-%d' }}",
      "rating": {% if company.rating and company.rating.size > 0 %}[{{ company.rating | join: ',' }}]{% else %}[0,0,0,0,0,0]{% endif %},
      "tags": [{% for tag in company.tags %}"{{ tag | escape }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
      "type": "Company"
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ],
  "products": [
    {% assign en_products = site.products | where: 'lang', 'en' | sort: 'date' | reverse %}
    {% for product in en_products %}
    {
      "title": "{{ product.target_name | escape }}",
      "url": "{{ product.url | absolute_url }}",
      "summary": "{{ product.summary | escape }}",
      "date": "{{ product.date | date: '%Y-%m-%d' }}",
      "rating": {% if product.rating and product.rating.size > 0 %}[{{ product.rating | join: ',' }}]{% else %}[0,0,0,0,0,0]{% endif %},
      "tags": [{% for tag in product.tags %}"{{ tag | escape }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
      "company_id": "{{ product.company_id }}",
      "type": "Product"
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
